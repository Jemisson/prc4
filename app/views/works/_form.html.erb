<%= simple_form_for @work do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :procedure, as: :radio_buttons, collection: [["Administrativo", "Administrativo"], ["Judicial", "Judicial"]], wrapper_html: {class: 'd-inline-flex'} %>
  <%= f.input :subject, as: :radio_buttons, collection: [["Previdenciário", "Previdenciário"], ["Cível", "Cível"]], wrapper_html: {class: 'd-inline-flex'}%>
  <%= f.input :action %>
  <%#= f.input :rito TODO ADD THIS FIELDS TO WORKS MODELS %>
  <%#= f.input :ajg %>
  <%= f.input :number %>
  <%= f.input :rate_percentage, label: "Honorários Percentual", as: :radio_buttons, collection: [["Sim", "true"], ["Não", "false"]] %>
  <%= f.input :rate_percentage_exfield, label: "Valor em %"%>
  <%= f.input :rate_fixed, label: "Honorários Fixos", as: :radio_buttons, collection: [["Sim", "true"], ["Não", "false"]] %>
  <%= f.input :rate_fixed_exfield, label: "Valor de Honorários Fixos" %>
  <%= f.input :rate_work, label: "Honorários De Trabalho ou Êxito", as: :radio_buttons, collection: [["Trabalho", "Trabalho"], ["Êxito", "Êxito"]] %>
  <%= f.input :rate_parceled, label: "Parcelamento" %>
  <%#= f.input :office, disabled: true %>

  <%#= f.input :power, as: :check_boxes, collection: [
              ["Ad Judicia", "Ad Judicia"],
              ["Citacao", "Citacao"]
                ] %>
  <%= f.input :recommendation %>
  <%= f.input :recommendation_comission %>
  <% #ultimoplusone = Client.last.id+1 %>
  <%#= f.input :folder, label: "Pasta #{ultimoplusone}", disabled: true, wrapper_html: {class: 'd-inline-flex'} %>
  <%= f.input :initial_atendee, wrapper_html: {class: 'd-inline-flex'} %>
  <%= f.input :responsible_lawyer, wrapper_html: {class: 'd-inline-flex' } %>
  <%#= f.input :outros_responsavel %>
  <%= f.input :procuration_intern , wrapper_html: {class: 'd-inline-flex'} %>
  <%= f.input :procuration_paralegal, wrapper_html: {class: 'd-inline-flex'} %>
  <%= f.input :partner_lawyer %>
  <%= f.input :checklist %>
  <%= f.input :checklist_document %>
  <%= f.input :document_pendent %>
  <%= f.input :note %>
  <%= f.button :submit, "Criar Trabalho", class: "btn btn-primary" %>


<% end %>
